@using Asp.net_Core_Web_Application.Models
@model UserSignUpViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Register</title>

    <link href="~/inspinia-gh-pages/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/animate.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>
                <h3 class="logo-name">IN+</h3>

            </div>
            <h3>Kayıt Ekranı</h3>
            <p>Yeni bir hesap oluşturma</p>
            @Html.ValidationSummary("",new{@class="text-danger"})
            <form class="m-t" role="form" method="post">
              
                <div class="form-group">
                    <input type="text" class="form-control" name="NameSurname" placeholder="Adınız Soyadınız" required>
                </div>
                <div class="form-group">
                    <input type="t" class="form-control" name="Mail"  placeholder="Email" required="">
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" name="UserName" placeholder="Kullanıcı adınız" required>
                </div>

                <div class="form-group">
                    <input type="password" class="form-control" name="Password" placeholder="Şifre" required>
                </div>
                
                <div class="form-group">
                    <input type="password" class="form-control" name="ConfirmPassword" placeholder="Şifre Tekrar" required>
                </div>

                <div class="form-group">
                    <div class="checkbox i-checks"><label> <input type="checkbox" required><i></i> Kullanım Şartlarını Okudum. </label></div>
                </div>
               
                <button type="submit" class="btn btn-primary block full-width m-b">Kayıt Ol</button>

                <p class="text-muted text-center"><small>Bir hesabınız var mı?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/RegisterUser/Login">Giriş Yap</a>
            </form>
            <p class="m-t"> <small>ASP.NET Proje Kampı | Tüm hakları Saklıdır</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/inspinia-gh-pages/js/jquery-3.1.1.min.js"></script>
    <script src="~/inspinia-gh-pages/js/popper.min.js"></script>
    <script src="~/inspinia-gh-pages/js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="~/inspinia-gh-pages/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function(){
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
</body>

</html>
